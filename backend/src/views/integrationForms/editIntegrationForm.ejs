<%- include('../partials/header') %>
<div class="container">
<main>
    <div class="py-5 text-center">
        <h2>View Integration</h2>
    </div>

    <div class="row g-5">
        <div >
            <h4 class="mb-3">View or update Integration</h4>
            <form class="border rounded p-5" method="POST" action="/integration/updateIntegration">
                <div class="row g-3">
                    <div class="col-12">
                        <label for="name" class="form-label">Integration Name</label>
                        <div class="input-group has-validation">
                            <input type="text" name="name" class="form-control" id="name" placeholder="Name to uniquely identify your integration"
                                required value="<%= integration.name %>">
                            <div class="invalid-feedback">
                                Integration Name is required
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="triggerPattern" class="form-label">Trigger Pattern</label>
                        <div class="input-group has-validation">
                            <input type="text" name="triggerPattern" class="form-control" id="triggerPattern" placeholder="The pattern which will trigger the integration"
                                required value="<%= integration.metadata.triggerPattern %>">
                            <div class="invalid-feedback">
                                Trigger Pattern is required
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="text" class="form-label">Reply Pattern</label>
                        <input type="text" name="replyPattern" class="form-control" id="replyPattern" placeholder="The reply you want to receive" value="<%= integration.metadata.replyPattern %>">
                        <div class="invalid-feedback">
                            Reply Pattern is required
                        </div>
                    </div>
                <hr class="my-4">
                <input type="hidden" name="integrationId" value="<%= integration._id %>">
                <div class="text-center">
                    <button class="w-50 btn btn-primary btn-lg" type="submit">Update Integration</button>
                </div>
            </form>
        </div>
    </div>
</main>
</div>
<%- include('../partials/footer') %>